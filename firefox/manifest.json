{
  "description": "Highlight",
  "manifest_version": 2,
  "name": "hili",
  "version": "1.0.0",
  "homepage_url": "https://github.com/breezykermo/hili",
  "icons": {
    "48": "icons/icon-48.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["hili.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html"
  },
  "permissions" : [
    "<all_urls>",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "hili@ohrg.org",
      "strict_min_version": "42.0"
    }
  }
}
